    # Create your Kivy layout in the kv language here
BoxLayout:

    BoxLayout:
        size_hint_x: 0.4
        orientation:"vertical"
        Label:
            text:"Sorted By:"
        Spinner:
            id:dropdown
            text:app.current_state
            values: app.states
            on_text:app.change_state(self.text)
        Label:
            text:"Add New Place:"
        Label:
            text:"Name:"
        TextInput:
            id:add_name
        Label:
            text:"Country:"
        TextInput:
            id:add_country
        Label:
            text:"Priority"
        TextInput:
            id:add_priority

        Button:
            id:btn_a
            text:"Add Place"
        Button:
            id:btn_c
            text:"Clear"

    BoxLayout:
        orientation:"vertical"
        Label:
            id:count_n
            text:"Places to visit:"
            size_hint: 0.5,0.3
            pos_hint:{'x':0.2, 'y':0.5}
        Button:
            text:"Lima in Peru, priority"
            background_color:(0.78,0.75,1,1)
        Button:
            text:"Rome in Italy, priority"
            background_color:(0.78,0.75,1,1)
        Button:
            text:"Auckland in New Zealand, priority"
            background_color:(0.4,0.45,1,0.5)
        Button:
            text:"Malaga in Spain, priority"
            background_color:(0.4,0.45,1,0.5)
        BoxLayout:
            id:places_listed
        Label:
            id:end
            text:"Welcome to use Travel Tracker 2.0"
            size_hint: 0.6, 1
            pos_hint: {'x':0.2, 'y':0}